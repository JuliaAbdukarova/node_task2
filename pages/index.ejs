<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%=title%></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

    <% if (created) { %>
        <div class="alert alert-success">
            Note has been created!
        </div>
    <% } %>


<div class="container"></div>
    <h1><%=title%></h1>
    <form action="/" method="post" class="mb-2">
        <div class="form-group mb-2"></div>
        <input type="text" class="form-control" name="title" required>
        <button class="btn btn-primary" type="submit">Create!</button>
    </form>
    <% if (notes.length) {%>
        <div class="card">
            <ul class="list-group">
                <% for (let i=0; i < notes.length;i++) { %>
                    <div class="list-group-item d-flex justify-content-between justify-content-left" id="<%= "div"+notes[i].id %>">
                        <li
                            id="<%= "li"+notes[i].id %>" >
                            <%= notes[i].title  %>

                        </li>
                        <div justify-content-end>
                            <button class="btn btn-primary " data-type="update" data-id="<%= notes[i].id %>">Редактировать</button>
                            <button class="btn btn-danger" data-type="remove" data-id="<%= notes[i].id %>">&times;</button>
                        </div>
                    </div>
                <% } %>
            </ul>
        </div>
    <% } else { %>
    <p> No notes</p>
    <% }%>
    <script src="/app.js"></script>
</body>
</html>